<div id="widget_lastest_weight_goal" class="col-md-3">
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <% if latest_weight_goal %>
            
            <h3 class="card-title">
                Weight Goal:
            </h3>
            <h2 class=""><%= latest_weight_goal.value %> kg</h2>
            
            <% else %>
            
            <small>You don't have any weight_goal registered</small> 
            
            <% end %>
        </div>
        <% if latest_weight_goal %>
        
        <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">Registered: <%= latest_weight_goal.date.to_date() %></small>
            </div>
        </div>
        
        <% end %>
    </div>
</div>