<div id="widget_lastest_weight" class="col-4">
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <div class="row">
                <% if latest_weight %>
                    <div class="col-5">
                        <h3 class="card-title"> Weight: </h3>
                        <h2 class=""><%= latest_weight.value %> kg</h2>
                    </div>
                <% else %>
                    <small>You don't have any weight registered</small> 
                <% end %>

                <% if latest_weight_goal %>  
                    <div class="col-7">
                        <h2 class="">Weight Goal: <%= @profile.weight_goal.value %> Kg</h2>
                    </div>  
                <% else %>
                    <small>You don't have any weight goal registered</small> 
                <% end %>
                
            </div>
        </div>


        <% if latest_weight %>
        
        <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">Registered: <%= latest_weight.date.to_date() %></small>
            </div>
        </div>
        
        <% end %>
    </div>
</div>
